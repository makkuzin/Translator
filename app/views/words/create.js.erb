<% if @word.valid? and @translation.valid? %>

    $('header .alert #flash_message').text("Словарь обновлен!");
    $('header .alert').removeClass('alert-danger').addClass('alert-success');

<% else %>

    $('header .alert #flash_message').text("Произошли ошибки при сохранении");
    $('header .alert').removeClass('alert-success').addClass('alert-danger');

<% end %>

$('header .alert').show();
$('#new_words_form input').val('');

setTimeout(function() {
    $('header .alert').fadeOut(300)
}, 3000 );

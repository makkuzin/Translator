<%= render 'languages/new_form' %>
<br>
<%= render 'words/new_form' %>

<div class="row" id="search_form">
    <div class="col-lg-8 offset-lg-2">
        <div class="input-group input-group-lg">
            <input type="text" class="form-control" placeholder="Найти перевод ...">
            <select class="custom-select">
                <option value="ru" title="Русский" selected>ru</option>
                <option value="en" title="Английский">en</option>
                <option value="fr" title="Французский">fr</option>
                <option value="de" title="Немецкий">de</option>
                <option value="jp" title="Японский">jp</option>
                <option value="cn" title="Китайский">cn</option>
            </select>
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">Поиск</button>
            </div>
        </div>
        <div id="search_result_area">
            <h2 class="h3">Результат:</h2>
            <ul class="list-group">
                <li class="list-group-item">
                    One
                    <span class="badge badge-secondary" title="Английский">en</span>
                </li>
                <li class="list-group-item">
                    Two
                    <span class="badge badge-secondary" title="Французский">fr</span>
                </li>
                <li class="list-group-item">
                    Three
                    <span class="badge badge-secondary" title="Немецкий">de</span>
                </li>
                <li class="list-group-item">
                    Four
                    <span class="badge badge-secondary" title="Японский">jp</span>
                </li>
            </ul>
        </div>
    </div>
</div>
